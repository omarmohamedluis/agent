{
  "id": "MIDI",
  "display_name": "OMI MIDI",
  "service_type": "process",
  "description": "Traduce eventos MIDI a OSC, expone WebUI y sincroniza presets con el servidor.",
  "web": {
    "USE": true,
    "ui_port": 9001

  },
  "execution": {
    "cwd": "servicios/MIDI",
    "entry": ["${PYTHON}", "service.py"],
    "restart_policy": "always",
    "graceful_timeout_s": 20
  },
  "logs": {
    "stdout": "logs/services/midi.log",
    "stderr": "logs/services/midierr.log",
    "rotate": {
      "max_size_mb": 10,
      "backups": 5
    }
  },
  "config": {
    "requires_preset": true,
    "default_config_name": "host,timestamp",
    "sync_endpoint": "/api/configs/MIDI"
  },
  "capabilities": {
    "supports_index_override": true,
    "supports_power_cycle": false,
    "network_ports": [
      {"protocol": "udp", "port": 1024, "description": "OSC output"},
      {"protocol": "tcp", "port": 9001, "description": "WebUI"}
    ]
  }
}
